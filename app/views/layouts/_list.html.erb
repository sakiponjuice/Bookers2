<% if user_signed_in? %>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg">
            <table class="table">
              <tbody>
                <tr></tr>
                <tr><th>name</th>user.name<th></th></tr>
                <tr><th>introduction</th>user.introduction<th></th></tr>
              </tbody>
            </table>
            <div class="row">
             <%= link_to  root_path, class: "btn btn-outline-secondary btn-block" do %>
             <i class="fas fa-user-cog edit_user_4043"></i>
               <% end %>
              </div>
              <h2 class="mt-3">New book</h2>
              <%= form_with model: book, url: books_path, local:true do |f| %>
               <h4>Title</h4>
                <%= f.text_field :title %>
                 <h4>Opinion</h4>
                  <%= f.text_area :body %>
                     <%= f.submit 'Create Book' %>
                      <% end %>
            </div>
           <% else %>
           <% end %>