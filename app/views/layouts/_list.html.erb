<% if user_signed_in? %>
<main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <h2>User info</h2>
            <table class="table">
              <tbody>
                <tr><%= attachment_image_tag user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %></tr>
                <tr><th>name</th><th><%= user.name %></th></tr>
                <tr><th>introduction</th><th><%= user.introduction %></th></tr>
              </tbody>
            </table>
            <div class= "edit_button">
            <div class="row">
             <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
             <i class="fas fa-user-cog edit_user_4043"></i>
               <% end %>
               </div>
              </div>
              <h2 >New book</h2>
              <%= form_with model: book, url: books_path, local: true do |f| %>
               <label>Title</label>
                 <%= f.text_field :title,class: "form-control" %>
                 <label>Opinion</label>
                   <%= f.text_area :body,class: "form-control" %>
                   <div class="actions"><%= f.submit "Create Book" ,class: "btn btn-success"%></div>
               <% end %>
            </div>
           <% else %>
           </main>
           <% end %>


