<%= render 'layouts/list', book: @new_book%>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <th></th>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>