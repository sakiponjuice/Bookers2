<%= render 'layouts/list', book: @new_book,user: current_user %>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
      <th><%= attachment_image_tag current_user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %></th>
      <th><%= link_to book.title, book_path(book.id) %></th>
      <th><%= book.body %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
