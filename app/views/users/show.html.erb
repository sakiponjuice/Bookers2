<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', book: @new_book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'layouts/search_header'%>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <th>
              <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 40,40, fallback: "no_image_2.jpg" %>
              <% end %>
            </th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
            <th>
              <p><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></p>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>