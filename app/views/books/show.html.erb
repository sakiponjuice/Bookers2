<p id="notice"><%= notice %></p>
<%= render 'layouts/list', book: @new_book, user: @book.user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
    <td>
     <div class="image_box">
        <%= link_to user_path(@book.user) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 40,40, fallback: "no_image_2.jpg" %>
        <% end %>
        <br><p><%= link_to @book.user.name, user_path(@book.user) %></p>
      </div>
    </td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <% if current_user==@book.user%>
      <td><%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success edit_book_4080' %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-sm btn-danger destroy_book_4080' ,"data-confirm" => "本当に消しますか？"%></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>

